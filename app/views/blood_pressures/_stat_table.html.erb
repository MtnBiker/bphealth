<div class="table-responsive ">
  <table class="table table-sm table-hover align-middle">  <!-- table-striped table-responsive pretty datetimes --> 
    <!-- Add .table-sm to make any .table more compact by cutting all cell padding in half. -->
    <thead>  <!-- class="sticky-header" -->
      <tr>
        <!-- Col widths go in the th -->
        <!--Not sure what scope is about -->
        <!-- <th scope="col" class="col-sm-1 text-end">ID</th> -->
        <th scope="col" class="text-center col-lg-2" colspan="2">Date</th>
        </i>
         <th scope="col" class="text-end col-lg-1">Systolic /</th><!-- text-uppercase is to see if bootstrap is working -->
        <th scope="col" class="text-start col-lg-1">Diastolic</th>
        <th scope="col" class="col-lg-1">HR</th>
        <!-- <th scope="col" class="text-center col-lg-2" colspan="2">Time only</th>  --><!-- Only need for debugging 24 hour chart -->
        <!-- <th scope="col" class="col-md-1">Weight</th> -->
        <th scope="col" class="col-lg-3">Comment</th>
        <th scope="col" class="col-lg-2" colspan="2"></th>
        <td>Debugging</td>
      </tr>
    </thead>

    <tbody>
      <% @blood_pressures.each do |blood_pressure| %>
        <%= turbo_frame_tag blood_pressure do %> <!-- Ending up at the top level of the table -->
          <tr>
              <%
                timeZone = case blood_pressure.statzone
                  when -8 then "America/Los_Angeles"
                  when -7 then "America/Los_Angeles"
                  when  0 then "Europe/London"
                end
              %>
             <% day_num = blood_pressure.statdate.in_time_zone(timeZone).strftime("%u").to_i %>
            <!-- The date and Setting the color background to denote days of the week -->
            <td class="text-end <%= systolic_icon_level(blood_pressure.systolic) %> background-color-day-<%= blood_pressure.statdate.in_time_zone(timeZone).strftime("%u") %> ">
              <%= blood_pressure.statdate.in_time_zone(timeZone).strftime("%a %d %b %Y") %>
            </td>
            <!-- The Time -->
            <td class="text-start"> <%= blood_pressure.statdate.in_time_zone(timeZone).strftime("%_l:%M %P") %></td>
            <!-- <td><%#= vert_lines(day_num) %></td> -->
            <td class="text-end <%= systolic_icon_level(blood_pressure.systolic) %> <%= systolic_text_color(blood_pressure.systolic) %> "> <%= blood_pressure.systolic %> / </td> <!-- /helpers/blood_pressures_helper.rb -->
            <td class="text-start">  <%= blood_pressure.diastolic %></td>
            <td class="text-center"> <%= blood_pressure.heartrate %></td>
            <td><%= link_to edit_blood_pressure_path(blood_pressure) do %><%= blood_pressure.comment %><% end %></td>
            <td><%= link_to 'Edit comment', edit_blood_pressure_path(blood_pressure) %></td>
            <td><%= link_to 'Delete this record', blood_pressure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <td>timeZone: <%= timeZone %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

<%== pagy_bootstrap_nav(@pagy) %>

